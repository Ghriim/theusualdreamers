{% extends "::admin_base.html.twig" %}

{% set title = 'user.list.title'|trans %}
{% block title %}{{ parent() }}{{ title }}{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li class="active">{{ title }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6 text-left important">
            {{ 'user.list.count'|trans }}&nbsp;{{ pagination.getTotalItemCount }}
        </div>
    </div>
    <section>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        {{ 'user.list.table.header.username'|trans }}
                    </th>
                    <th>
                        {{ 'user.list.table.header.email'|trans }}
                    </th>
                    <th>
                        {{ 'user.list.table.header.lastLogin'|trans }}
                    </th>
                    <th>
                        {{ 'user.list.table.header.roles'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for user in pagination %}
                    <tr>
                        <td>
                            {{ user.username }}
                        </td>
                        <td>
                            <a href="mailto:{{ user.email }}">
                                {{ user.email }}
                            </a>
                        </td>
                        <td>
                            {{ user.lastLogin|date('d/m/Y') }}
                        </td>
                        <td>
                            {{ user.roles|join(', ') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </section>
{% endblock %}
