{% extends "::public_base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div>
        <a href="{{ path('blog_post_list') }}" title="Back to list">
            Back To List
        </a>
    </div>
    <article>
        <h2>{{ post.title }}</h2>
        <div>
            {{ post.content|raw }}
        </div>
        <span>{{ post.publication|date('d/m/y H:m') }}</span>

        <section>
            AUTEUR
        </section>
    </article>

    <aside>
        ARTICLE SIMILAIRES
    </aside>
{% endblock %}