{% extends "::layout/_base.html.twig" %}

{% block title %}Admin - {% endblock %}

{% block body %}
    <div class="row">
        <nav class="col-sm-3 col-md-2 sidebar">
            <h1>
                ADMIN
            </h1>
            <ul class="nav nav-sidebar">
                <li>
                    {{ 'header.navigation.blog'|trans }}
                </li>
                <li>
                    {{ 'header.navigation.equipments'|trans }}
                </li>
                <li>
                    {{ 'header.navigation.about'|trans }}
                </li>
                <li>
                    <a href="{{ path('blog_post_list') }}" title="{{ 'header.navigation.publicSite'|trans }}">
                        {{ 'header.navigation.publicSite'|trans }}
                    </a>
                </li>
            </ul>
        </nav>

        <section class="col-sm-9 col-md-10 main">
            <div>
                <ol class="breadcrumb">
                    {% block breadcrumbs %}
                        <li><a href="#">Admin</a></li>
                    {% endblock %}
                </ol>
            </div>
            <aside>
                {% for type, flash_messages in app.session.flashBag.all %}
                    {% for flash_message in flash_messages %}
                        <div class="flash-{{ type }}">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                {% endfor %}

            </aside>

            <main>
                {% block content %}{% endblock %}
            </main>
        </section>
    </div>
{% endblock %}